      <style>
        .myborder{
          border: 5px solid #28a745;
          border-radius: 10px;
        }
      </style>
    
<body>

  <%- include('inc/navbar'); %>
    <div style="margin-top: 120px;" class="container ">
      <div style="width: 600px; height: 400px; " class="myborder">
        <h2 style="text-align: center;">Reklam Ekleme</h2>
        <div style="width: 400px; height: 200px; margin: auto; margin-top: 30px; ">
          <form action="ekle" method="POST" enctype="multipart/form-data">
            <label for="text">Resim İsmi Giriniz: </label> 
  
              <input type="text" name="isim" id="isim">
              <label for="text">Halı Sahanızı Seçiniz: </label> 
               <select id="halisahalar" name="halisaha_id">
                <%halisaha.forEach((element,index)=>{%>

                    <option value="<%=element.id%>"><%=element.name%></option>

                  <%})%>
                
                 
              </select>
            
              <!-- <input type="text" name="sehir" id="sehir"> -->
              <input type="file" name="reklam_image" />
              <button style="margin-top: 10px;" type="submit" class="arabtn btn-block">
                  Yükle
                </button>
            </form> 
            <button  style="margin-top: 20px;" type="button" class=" btn btn-danger btn-block" data-toggle="modal" data-target="#fotoSil" data-whatever="@mdo">Resim Silmek İçin Tıkla</button>
  
        </div>
      
         
    </div>
    </div>
   
    



    <div class="modal fade" id="fotoSil" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Fotoğraf Sil</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="/admin/reklam/imagedelete/delete" id="preForm" method="POST" >
               
                <%reklam.reklam_image.forEach(element=>{%>
                 
                 <button type="submit" name="fotosl" value="<%=element%>"><img width="100px" src="/reklamImage/<%=element%>" alt=""></button> 
  
                <%})%>
              
                <input  type="text" name="sehir">
                <select id="halisahalar" name="halisaha_id">
                  <%halisaha.forEach((element,index)=>{%>
  
                      <option value="<%=element.id%>"><%=element.name%></option>
  
                    <%})%>
                  
                   
                </select>
               
               </form>
  
           </div>
          </div>
       </div>
     </div>
  

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>